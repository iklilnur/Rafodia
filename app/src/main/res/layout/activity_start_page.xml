<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_start"
    tools:context=".Pantry">


    <TextView
        android:id="@+id/text_rafodia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textnama"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/title_start_page"
        android:textSize="10pt"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textnama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/ARIALNB"
        android:shadowColor="@color/shadow"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="@string/textnama"
        android:textColor="@color/background"
        android:textSize="10pt"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textTagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textnama"
        android:layout_centerInParent="true"
        android:fontFamily="@font/ARIALNI"
        android:textColor="@color/background"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:shadowColor="@color/shadow"
        android:text="@string/textTagline"
        tools:ignore="MissingConstraints" />

</RelativeLayout>